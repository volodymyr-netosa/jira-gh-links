{
    "manifest_version": 3,
    "name": "Pattern to Links",
    "version": "1.2",
    "description": "Converts specific patterns to links on web pages.",
    "background": {
        "service_worker": "content.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "img/icon.png"
        }
    },
    "permissions": [
        "tabs",
        "scripting",
        "activeTab"
    ],
    "web_accessible_resources": [{
        "resources": ["img/jira.png"],
        "matches": ["<all_urls>"]
    }],
    "host_permissions": [
        "https://github.com/Bini-Games/*"
    ]
}